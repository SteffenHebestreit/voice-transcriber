{
  "name": "voice-transcriber",
  "version": "1.0.0",
  "description": "A sleek, system-wide voice-to-text transcription tool powered by OpenAI's Whisper AI with true hold-to-talk and modern HUD interface",
  "main": "dist/main/index.js",
  "author": "Voice Transcriber Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/voice-transcriber.git"
  },
  "keywords": [
    "whisper",
    "voice-to-text",
    "speech-to-text",
    "transcription",
    "electron",
    "speech-recognition",
    "voice-typing",
    "dictation",
    "ai",
    "openai"
  ],
  "homepage": "https://github.com/yourusername/voice-transcriber#readme",
  "bugs": {
    "url": "https://github.com/yourusername/voice-transcriber/issues"
  },
  "scripts": {
    "postinstall": "electron-rebuild -f",
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload && npm run build:overlay",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --outfile=dist/main/index.js --external:electron --external:electron-store --external:uiohook-napi --external:ffmpeg-static --sourcemap",
    "build:renderer": "esbuild src/renderer/index.ts --bundle --outfile=dist/renderer/index.js --sourcemap",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --outfile=dist/preload/index.js --external:electron --sourcemap",
    "build:overlay": "esbuild src/overlay/overlay.ts --bundle --outfile=dist/overlay/overlay.js --sourcemap",
    "build:watch": "npm run build -- --watch",
    "electron:dev": "wait-on dist/main/index.js && electron .",
    "electron": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.3.0",
    "form-data": "^4.0.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  }
}
